# HTTP port the server listens on
PORT=8080

# Postgres connection string
# Example: postgres://user:pass@localhost:5432/dbname?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@postgres:5432/app?sslmode=disable

# FIPE external API configuration (optional)
# If you integrate with a paid / external FIPE API, set the URL and token here.
FIPE_EXTERNAL_API_URL=
FIPE_API_TOKEN=

# Secret key used to sign JWT tokens (replace with a strong secret in production)
SECRET_KEY=replace-with-a-secure-secret

# Gin mode: release|debug|test (defaults to release)
GIN_MODE=release
